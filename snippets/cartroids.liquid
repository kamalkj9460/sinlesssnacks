<meta name="ca:collections" content='{"":"" {% for line_item in cart.items %}, "{{line_item.product.id}}": [""{% for collection in line_item.product.collections %},"{{ collection.title | replace: '"', '\"' | escape }}"{% endfor %}]{% endfor %} }'>
