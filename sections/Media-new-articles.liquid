            "id": "image",
            "label": "Article image"
          },
          
		  {
            "type": "text",
            "id": "media-outlet",
            "label": "Sub title"
          },
		  {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
		  {
            "type": "richtext",
            "id": "text",
            "label": "Content"
          },
		  {
            "type": "text",
            "id": "button",
            "label": "Button"
          },
		  {
            "type": "text",
            "id": "link_to",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Media news aricles"
	  }
	]
  }
{% endschema %}

