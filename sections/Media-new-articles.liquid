<div class="media-news-articles page-width">
  <div class="media-news-inner">
    <div class="media-news-flex">
      {% for block in section.blocks %}
          <div class="media-news-content">
        	<a href="{{block.settings.link_to}}" target="_blank">
            {% if block.settings.image != blank%}
              <div class="media-news-image">
                <img src="{{ block.settings.image | img_url:'500x'}}"/>
              </div>
            {% endif %}
            <div class="media-news-text">
              {% if block.settings.media-outlet != blank%}
              	<div class="h5 media-outlet">{{block.settings.media-outlet}}</div>
              {% endif %}
              {% if block.settings.title != blank%}
              	<h3 class="h2">{{block.settings.title}}</h3>
              {% endif %}
              {% if block.settings.text != blank%}
              	{{block.settings.text | truncatewords: 50}}
              {% endif %}
              {% if block.settings.button != blank%}
                <div class="article_btn">
                  <span>{{block.settings.button}}</span>
                </div>
              {% endif %}
            </div>
         	</a>
          </div>
      {% endfor %}
    </div>
  </div>
</div>
