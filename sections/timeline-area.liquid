{% if template contains 'product' %}
  {% assign showbox = false %}
  {%- if section.settings.title != blank -%}
  {% assign showbox = true %}
  {% endif %}
{% else %}
  {% assign showbox = true %}
{% endif %}
{%- if showbox -%}
<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>
<section class="timeline-section section-{{ section.id }}-padding" style="background-color: {{section.settings.bg_color}};">
  {% if section.settings.image != blank %}<img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-class="LazyLoad" data-src="{{ section.settings.image | img_url:'original'}}" alt="" class="abs_img imgmarsh_compare" />{% endif %}
	<div class="custom-page-width">

 		<div class="grid justify-content-center">
			<div class="title-width">
				<div class="title--wrapper cosmok-section-title center">
					<span class="sub-title">{{ section.settings.subtitle}}</span>
					<h2 class="title {{ section.settings.heading_size }}">{{ section.settings.title}}</h2>
				</div>
			</div>
		</div>
		<div class='grid'>
			<div class='mob_flex'>
				{% for block in section.blocks %}
				<div class="token-item">
                    <div class="col"><h2 class="title">{{ block.settings.heading}}</h2></div>
					<div class="col">
						<img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-class="LazyLoad" data-src="{{ block.settings.image | img_url:'original'}}" alt="">
					</div>
					<div class="col">
						<div class="token-content-wrap">
							<h2 class="title">{{ block.settings.title}}</h2>
						</div>
					</div>
					<div class="col">
						<div class="token-content-wrap">
							<h2 class="title">{{ block.settings.title1}}</h2>
						</div>
					</div>
					<div class="col">
						<div class="token-content-wrap">
							<h2 class="title">{{ block.settings.title2}}</h2>
						</div>
					</div>
					<div class="col">
						<div class="token-content-wrap">
							<h2 class="title">{{ block.settings.title3}}</h2>
						</div>
					</div>
				</div>
              {% endfor %}
			</div>
		</div>
	</div>
</section>
{% endif %}
{% schema %}
  {
    "name": "Timeline",
    "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Crunch Image for background"
        },
        {
          "type": "color",
          "id": "bg_color",
          "default": "#a1e2d6",
          "label": "Background Color"
        },
		{
          "type": "text",
          "id": "subtitle",
          "label": "Sub Title"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
        },
		{
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        }
    ],
	"blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
		{
          "type": "text",
          "id": "heading",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title1"
        },
		{
          "type": "text",
          "id": "title1",
          "label": "Title2"
        },
		{
          "type": "text",
          "id": "title2",
          "label": "Title3"
        },
		{
          "type": "text",
          "id": "title3",
          "label": "Title4"
        }
	  ]
	}
],
	"presets": [
       {
        "name": "Timeline"
       }
	 ]
  }
{% endschema %}

