          "id": "image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
		{
          "type": "text",
          "id": "text",
          "label": "text"
        },
		{
          "type": "text",
          "id": "btn",
          "label": "Button"
        },
		{
          "type": "url",
          "id": "btn_link",
          "label": "Button link"
        }
	],
	"presets": [
       {
        "name": "New banner"
       }
	 ]
  }
{% endschema %}

