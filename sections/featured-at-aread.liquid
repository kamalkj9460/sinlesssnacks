{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<!-- featured at-area -->
	<section class="featured-area section-{{ section.id }}-padding">
		<div class="custom-page-width">
			<div class="grid">
				<div class="title-width">
					<div class="section-title center ">
                      {% if section.settings.title != blank %}
						<h2 class="h1">{{ section.settings.title }}</h2>
                      {% endif %}
                      {% if section.settings.subtext != blank %}
						<p>{{ section.settings.subtext }}</p>
                      {% endif %}
					</div>
				</div>
			</div>
		</div>
		<div class="custom-page-width">
				<div class="{% if section.settings.showslide %}responsive{% else %}grid justify-content-center {% endif %}">
                  {% for block in section.blocks %}
					<div class="col-md-2">
						<div class="featured-item">
                          {% if block.settings.image != blank %}
							<img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-class="LazyLoad" data-src="{{ block.settings.image | img_url: '100x'}}" alt="">
                          {% endif %}
						</div>
					</div>
                  {% endfor %}
				</div>
			</div>
	</section>
	<!-- featured at -area-end -->

{% schema %}
  {
    "name": "Featured at Area",
    "settings": [
       {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Subtext"
        },
		{
          "type": "checkbox",
          "id": "showslide",
          "label": "Show icons with slider"
    
        },
		{
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        }
],
	"blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
	  ]
	}
],
	"presets": [
       {
        "name": "Featured at Area"
       }
	 ]
  }
{% endschema %}

