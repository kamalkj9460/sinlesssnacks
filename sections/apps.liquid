<div class="{% if section.settings.include_margins %}page-width{% endif %}">
  {%- for block in section.blocks -%}
    {% capture app_block %}
                {% render block %}  
    {% endcapture %}
    {{ app_block | replace: "<link href=", "<link data-href=" | replace: "<script>", "<script type='lazyload_int'>" | replace: "<script src=", "<script type='lazyload_int' data-src=" | replace: '<script async src=' , '<script type="lazyload_int" data-src=' }}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "t:sections.apps.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ]
}
{% endschema %}
