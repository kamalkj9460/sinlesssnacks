{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="announcement-bar gradient" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }} style="background:{{block.settings.bgcolor}}; color:{{block.settings.color}}">
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <span class="animate-arrow">
<!--             <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow"> -->
          {%- endif -%}
              <p class="announcement-bar__message h5" style="color:{{block.settings.color}}">
                {{ block.settings.text | escape }}
                {%- if block.settings.link != blank -%}
                  {% render 'icon-arrow' %}
                {%- endif -%}
              </p>
          {%- if block.settings.link != blank -%}
<!--             </a> -->
        </span>
          {%- endif -%}
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "color",
          "id": "bgcolor",
          "label": "Background color"
        },
		{
          "type": "color",
          "id": "color",
          "label": "Text color"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
